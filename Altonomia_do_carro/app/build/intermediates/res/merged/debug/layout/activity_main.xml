<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar abastecimento"
            android:id="@+id/btAdicionar_abas"
            android:onClick="Adicionar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizar abasteciemntos"
            android:layout_below="@id/btAdicionar_abas"
            android:layout_marginTop="20dp"
            android:id="@+id/btVisualiza_abas"
            android:onClick="Visualiza"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txInfor_alto"
            android:hint="Altonomia atual"
            android:layout_below="@+id/btVisualiza_abas"
            android:layout_marginTop="150dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txInfor_alto"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Km"
                android:textSize="45dp"
                android:id="@+id/tvMedicao_altonomia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km/l"
                android:layout_marginTop="15dp"/>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
